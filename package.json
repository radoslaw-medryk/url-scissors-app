{
    "name": "@radoslaw-medryk/react-template",
    "private": true,
    "scripts": {
        "build-dev": "rm -r dist && npm run prettier-check && tsc && webpack --mode=production && cp configs/dev-config.json dist/config.json",
        "build-prod": "rm -r dist && npm run prettier-check && tsc && webpack --mode=production && cp configs/prod-config.json dist/config.json",
        "deploy-prod": "npm run build-prod && npx firebase deploy --project url-scissors",
        "deploy-dev": "npm run build-dev && npx firebase deploy --project <dev_app_name>",
        "start": "webpack-dev-server",
        "lint:css": "stylelint src/**/*.tsx",
        "prettier": "prettier ./src/**/*.{js,ts,tsx,json,html} --write",
        "prettier-check": "prettier ./src/**/*.{js,ts,tsx,json,html} --check"
    },
    "dependencies": {
        "@babel/core": "^7.1.2",
        "@babel/plugin-proposal-class-properties": "^7.1.0",
        "@babel/polyfill": "^7.0.0",
        "@babel/preset-env": "^7.1.0",
        "@babel/preset-react": "^7.0.0",
        "@babel/preset-typescript": "^7.1.0",
        "@radoslaw-medryk/tslint": "^0.1.5",
        "@types/classnames": "^2.2.6",
        "@types/react": "^16.7.18",
        "@types/react-dom": "^16.0.11",
        "@types/react-router": "^4.4.5",
        "@types/react-router-dom": "^4.3.2",
        "axios": "^0.18.0",
        "babel-loader": "^8.0.4",
        "babel-plugin-module-resolver": "^3.1.1",
        "classnames": "^2.2.6",
        "css-loader": "^1.0.1",
        "file-loader": "^3.0.1",
        "html-webpack-plugin": "^5.5.0",
        "linaria": "^1.3.1",
        "mini-css-extract-plugin": "^0.4.4",
        "normalize.css": "^8.0.0",
        "react": "^16.7.0-alpha.2",
        "react-dom": "^16.7.0-alpha.2",
        "react-router": "^5.0.0",
        "react-router-dom": "^5.0.0",
        "source-map-loader": "^0.2.4",
        "stylelint": "^9.9.0",
        "stylelint-config-recommended": "^2.1.0",
        "stylelint-webpack-plugin": "^0.10.5",
        "tslint": "^5.11.0",
        "tslint-loader": "^3.5.4",
        "typescript": "^3.1.6",
        "url-loader": "^1.1.2",
        "webpack": "^4.24.0",
        "webpack-cli": "^3.3.0"
    },
    "devDependencies": {
        "firebase-tools": "^6.5.0",
        "prettier": "^1.16.4",
        "style-loader": "^0.23.1",
        "tslint-config-prettier": "^1.18.0",
        "webpack-dev-server": "^3.3.1"
    }
}
